<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.houyalab.android.backevolution"
    android:installLocation="preferExternal"
    android:versionCode="2"
    android:versionName="0.1.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_settings" >
        </activity>
        <activity
            android:name=".ui.ActivityMeditationCheck"
            android:label="@string/title_meditation" >
        </activity>
        <activity
            android:name=".ui.ActivityBookVolumeTile"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.ActivityBookVolumeDetail"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name=".service.MeditationService"
            android:enabled="true" >
			<intent-filter>
                <action android:name="com.houyalab.android.backevolution.meditationservice" />
			</intent-filter>
        </service>
		
        <receiver android:name=".receiver.MessageReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_CHANGED" />
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="meditation_start" />
                <action android:name="meditation_running" />
                <action android:name="meditation_stop" />
            </intent-filter>
        </receiver>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>