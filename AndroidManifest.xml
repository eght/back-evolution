<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.houyalab.android.backevolution"
    android:installLocation="preferExternal"
    android:versionCode="5"
    android:versionName="0.2.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_settings" >
        </activity>
        <activity
            android:name=".ui.ActivityMeditationCheck"
            android:label="@string/title_meditation" >
        </activity>
        <activity
            android:name=".ui.ActivityBookVolumeTile"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.ActivityBookVolumeDetail"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.PrepareActivity"
			android:theme="@android:style/Theme.Dialog"
            android:label="@string/title_prepare" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>