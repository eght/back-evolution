<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="book" />

    <LinearLayout
        android:id="@+id/rg_book_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_book_catalog"
            style="@style/NavBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableTop="@drawable/ic_drawer"
            android:text="@string/book_btn_catalog" />

        <Button
            android:id="@+id/btn_book_bookmark"
            style="@style/NavBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_drawer"
            android:text="@string/book_btn_bookmark" />

        <Button
            android:id="@+id/btn_book_notes"
            style="@style/NavBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_drawer"
            android:text="@string/book_btn_notes" />
    </LinearLayout>
</RelativeLayout>
