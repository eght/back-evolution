<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
	</style>

    <style name="AppTheme" parent="AppBaseTheme">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">18sp</item>
        <item name="actionBarStyle">@style/ActionBarStyle.Ex</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Ex</item>
        <item name="actionBarTabBarStyle">@style/ActionBarTabBarStyle.Ex</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabTextStyle.Ex</item>
		<item name="titleTextStyle">@style/TitleTextStyle.Ex</item>		
    </style>

    <style name="ActionBarStyle.Ex" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">#FF00ff00</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarTabStyle.Ex" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">#FF6699cc</item>
    </style>

    <style name="ActionBarTabBarStyle.Ex" parent="Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:background">#FF6699cc</item>
    </style>

    <style name="ActionBarTabTextStyle.Ex" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffff00</item>
    </style>

    <style name="TitleTextStyle.Ex" parent="TextAppearance.AppCompat.Widget.Base.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff0000</item>
    </style>
	
	<style name="footbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>  
        <item name="android:button">@null</item>  
        <item name="android:paddingTop">@dimen/space_1</item>
        <item name="android:paddingBottom">@dimen/space_3</item>
    </style>
    <style name="footbar_radio" parent="footbar">
        <item name="android:background">@drawable/bar_bg</item>
        <item name="android:padding">0dip</item>
    </style>
   	<style name="footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
	<style name="footbar_image">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bar_bg</item>
        <item name="android:clickable">true</item>
    </style>
	
</resources>
