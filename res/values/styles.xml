<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="NavBarStyle">
		<item name="android:textColor">#333333</item>
		<item name="android:textSize">12dip</item>
    </style>

	<style name="footbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>  
        <item name="android:button">@null</item>  
        <item name="android:paddingTop">@dimen/space_1</item>
        <item name="android:paddingBottom">@dimen/space_3</item>
    </style>
    <style name="footbar_radio" parent="footbar">
        <item name="android:background">@drawable/widget_bar_bg</item>
        <item name="android:padding">0dip</item>
    </style>
   	<style name="footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
	<style name="footbar_image">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/widget_bar_bg</item>
        <item name="android:clickable">true</item>
    </style>
	
   	<style name="head_title">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/text_size_19</item>
		<item name="android:textColor">@color/head_text</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
    </style>

    <style name="cut_line">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">2.0dip</item>
		<item name="android:layout_marginTop">8.0dip</item>
		<item name="android:layout_marginBottom">10.0dip</item>
		<item name="android:layout_marginLeft">6.0dip</item>
		<item name="android:layout_marginRight">6.0dip</item>
		<item name="android:background">@drawable/line_bluegray</item>
	</style>
	
</resources>
