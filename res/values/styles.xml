<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarTabTextStyle">@style/ActionBarTabTextStyle.Ex</item>
	</style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="ActionBarTabTextStyle.Ex" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
	<style name="footbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>  
        <item name="android:button">@null</item>  
        <item name="android:paddingTop">@dimen/space_1</item>
        <item name="android:paddingBottom">@dimen/space_3</item>
    </style>
    <style name="footbar_radio" parent="footbar">
        <item name="android:background">@drawable/bar_bg</item>
        <item name="android:padding">0dip</item>
    </style>
   	<style name="footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
	<style name="footbar_image">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bar_bg</item>
        <item name="android:clickable">true</item>
    </style>
	
</resources>
